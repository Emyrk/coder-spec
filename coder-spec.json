{
    "$schema": "http://json-schema.org/draft/2019-09/schema#",
    "$id": "coder-spec.json",
    "title": "Coder WAC Specification",
    "description": "Specification to create coder yaml configuration files.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "version": {
            "description": "Coder configuration version",
            "type": "string",
            "deprecated":true,
            "default": "Hello",
            "readOnly":true
        },
        "word": {
            "type": "string",
            "examples": ["hi", "bye"]
        },
        "workspace": {
            "type": "object",
            "properties": {
                "configure": {
                    "title": "The best field",
                    "description": "Hello World! This is my description",
                    "type": "object"
                }
            }
        }
    },
    "required": ["version"]
}